{
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },

  "env": {
    "node": true,
    "jest": true
  },

  "extends": "eslint:recommended",
  "plugins": ["jest"],
  "globals": {
    "alert": "readonly",
    "document": "readonly",
    "localStorage": "readonly",
    "addEventListener": "readonly",
    "page": "readonly"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}